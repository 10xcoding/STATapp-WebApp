<mvc:View
	controllerName="sap.ui.demo.nav.controller.ticket.Ticket"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.ui.layout.form"
	busyIndicatorDelay="0">
	<Page
		id="ticketPage"
		title="{i18n>TicketDetailsOf} {ticket>d/'ticketId'}"
		showNavButton="true"
		navButtonPress="onNavBack"
		class="sapUiResponsiveContentPadding">
		<content>
			<Panel
				id="ticketPanel"
				width="auto"
				class="sapUiResponsiveMargin sapUiNoContentPadding">
				<headerToolbar>
					<Toolbar>
						<Title text="{i18n>TicketDetailsToolbar}" level="H2"/>
						<ToolbarSpacer />
					</Toolbar>
				</headerToolbar>
				<content>
					<f:SimpleForm
						minWidth="1024"
						editable="false"
						layout="ResponsiveGridLayout"
						labelSpanL="3" labelSpanM="3" emptySpanL="4" emptySpanM="4" columnsL="1" columnsM="1">
						<f:content>
							<Label text="{i18n>TicketTitle}" />
							<Text text="before {ticket>ticketTitle} after" />
							<Label text="{i18n>TicketDescription}" />
							<Text text="{ticket>ticketDescription}" />
						</f:content>
					</f:SimpleForm>
				</content>
			</Panel>
		</content>
	</Page>
</mvc:View>