<mvc:View
    controllerName="sap.ui.demo.wt.controller.TicketList"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">
    <List
        id="ticketList"
        class="sapUiResponsiveMargin"
        width="auto"
        items="{ticket>/d/results}" >
        <headerToolbar>
            <Toolbar>
                <SearchField search="onFilterTickets" selectOnFocus="false"/>
            </Toolbar>
        </headerToolbar>
        <items>
            <ObjectListItem
                title="{ticket>ticketId} :  {ticket>ticketTitle}"
                number="{
                    parts: [{path: 'ticket>ticketStatus.value'}],
                    formatOptions: {
                        showMeasure: false
                    }
                }"
                numberUnit="{ticket>/ticketPriority}">
                <firstStatus>
                    <ObjectStatus text="{
                        path: 'ticket>ticketPriority.value',
                        formatter: '.formatter.priorityText'
                    }"/>
                </firstStatus>
            </ObjectListItem>
        </items>
    </List>
</mvc:View>