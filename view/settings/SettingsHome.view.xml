<mvc:View
	controllerName="statapp.controller.settings.SettingsHome"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:layout="sap.ui.layout">
	<Page id="settingsHomePage" title="{i18n>settings.SettingsHome.Title}"
		showNavButton="true"
		navButtonPress="onNavBack"
		class="sapUiResponsiveContentPadding" >
        <layout:VerticalLayout class="sapUiResponsiveMargin">
            <Title
                titleStyle="H2"
                text="{i18n>settings.SettingsHome.STAT.Subtitle}"
                class="sapUiSmallMarginBegin sapUiSmallMarginTop" />
                
            <layout:HorizontalLayout allowWrapping="true">
            
                <GenericTile
                    class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
                    header="{i18n>settings.SettingsHome.accountSettingsHeader}"
                    subheader="{i18n>settings.SettingsHome.accountSettingsSubheader}"
                    press="onNavToAccountSettings">
                    <tileContent>
                        <TileContent>
                            <content>
                                <ImageContent src="sap-icon://account" />
                            </content>
                        </TileContent>
                    </tileContent>
                </GenericTile>
                
                <GenericTile
                    class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
                    header="{i18n>settings.SettingsHome.userSettingsHeader}"
                    subheader="{i18n>settings.SettingsHome.userSettingsSubheader}"
                    press="onNavToUserSettings">
                    <tileContent>
                        <TileContent>
                            <content>
                                <ImageContent src="sap-icon://user-settings" />
                            </content>
                        </TileContent>
                    </tileContent>
                </GenericTile>
                
                <GenericTile
                    class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
                    header="{i18n>settings.SettingsHome.funcAreaSettingsHeader}"
                    subheader="{i18n>settings.SettingsHome.funcAreaSettingsSubheader}"
                    press="onNavToFuncAreaSettings" />
                
                <GenericTile
                    class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
                    header="{i18n>settings.SettingsHome.ticketStatusSettingsHeader}"
                    subheader="{i18n>settings.SettingsHome.ticketStatusSettingsSubheader}"
                    press="onNavToTicketStatusSettings" />
                
                <GenericTile
                    class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
                    header="{i18n>settings.SettingsHome.ticketPrioritySettingsHeader}"
                    subheader="{i18n>settings.SettingsHome.ticketPrioritySettingsSubheader}"
                    press="onNavToTicketPrioritySettings" />
                
            </layout:HorizontalLayout>
        </layout:VerticalLayout>
	</Page>
</mvc:View>
