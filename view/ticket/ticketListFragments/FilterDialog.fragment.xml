<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m" >
	<ViewSettingsDialog confirm="onConfirmFilter">
        <filterItems>
            <ViewSettingsFilterItem
                key="ticketStatus_value"
                text="Status"
                multiSelect="true" >
				<items>
                    <ViewSettingsItem
                        key="s1"
                        text="New" />
                    <ViewSettingsItem
                        key="s2"
                        text="In Progress" />
                    <ViewSettingsItem
                        key="s3"
                        text="Closed" />					
				</items>
			</ViewSettingsFilterItem>
            <ViewSettingsFilterItem
                key="ticketPriority_value"
                text="Priority"
                multiSelect="true" >
				<items>
                    <ViewSettingsItem
                        key="p1"
                        text="High" />
                    <ViewSettingsItem
                        key="p2"
                        text="Medium" />
                    <ViewSettingsItem
                        key="p3"
                        text="Low" />					
				</items>
			</ViewSettingsFilterItem>
		</filterItems>
	</ViewSettingsDialog>
</core:FragmentDefinition>