<mvc:View
	controllerName="sap.ui.demo.nav.controller.ticket.TicketEdit"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	busyIndicatorDelay="0">
	<Page
		id="ticketEditPage"
		title="{i18n>EditTicketTitle} {ticketId}"
		showNavButton="true"
		navButtonPress="onNavBack"
		class="sapUiResponsiveContentPadding">
		<content>
			<Panel
				id="ticketPanel"
				width="auto"
				class="sapUiResponsiveMargin sapUiNoContentPadding">
				<headerToolbar>
					<Toolbar>
						<Title text="{i18n>TicketDetailsToolbar}" level="H2"/>
						<ToolbarSpacer />
					</Toolbar>
				</headerToolbar>
				<content>
					<f:SimpleForm
						minWidth="1024"
						editable="false"
						layout="ResponsiveGridLayout"
						labelSpanL="3" labelSpanM="3" emptySpanL="4" emptySpanM="4" columnsL="1" columnsM="1">
						<f:content>
							<Label text="{i18n>Creator}" />
							<Text text="{firstName_creator} {lastName_creator}" />
							<Label text="{i18n>DateCreated}" />
							<Text text="{
                                path: 'dateCreated',
                                type: 'sap.ui.model.type.Date',
                                formatOptions: {
                                    style: 'medium'
                                }
                            }" />
							<Label text="{i18n>DateStarted}" />
							<Text text="{
                                path: 'dateStarted',
                                type: 'sap.ui.model.type.Date',
                                formatOptions: {
                                    style: 'medium'
                                }
                            }" />
							<Label text="{i18n>DateClosed}" />
							<Text text="{
                                path: 'dateClosed',
                                type: 'sap.ui.model.type.Date',
                                formatOptions: {
                                    style: 'medium'
                                }
                            }" />
						</f:content>
					</f:SimpleForm>
					<f:SimpleForm
						minWidth="1024"
						editable="true"
						layout="ResponsiveGridLayout"
						labelSpanL="3" labelSpanM="3" emptySpanL="4" emptySpanM="4" columnsL="1" columnsM="1">
						<f:content>
							<Label text="{i18n>TicketTitle}" />
							<TextArea value="{ticketTitle}" />
							
							<Label text="{i18n>TicketDescription}" />
							<TextArea value="{ticketDescription}" />
							
							<Label text="{i18n>FunctionalArea}" />
							<Select
                        		id="funcAreaSelect"
                        		items="{
                        			path: 'FuncAreaModel>/FuncAreas'
                        		}">
                        		<items>
                        			<core:Item key="{FuncAreaModel>value}" text="{FuncAreaModel>description}" />
                        		</items>
                        	</Select>
							
							<Label text="{i18n>Assignee}" />
							<Select
                        		id="assigneeSelect"
                        		items="{
                        			path: 'UserModel>/Users'
                        		}">
                        		<items>
                        			<core:Item key="{UserModel>userId}" text="{UserModel>firstName} {UserModel>lastName}" />
                        		</items>
                        	</Select>
							
							<Label text="{i18n>TicketStatus}" />
							<Select
                        		id="ticketStatusSelect"
                        		items="{
                        			path: 'ticketStatusModel>/TicketStatuses'
                        		}">
                        		<items>
                        			<core:Item key="{ticketStatusModel>value}" text="{ticketStatusModel>description}" />
                        		</items>
                        	</Select>
							
							<Label text="{i18n>TicketPriority}" />
							<Select
                        		id="ticketPrioritySelect"
                        		items="{
                        			path: 'TicketPriorityModel>/TicketPriorities'
                        		}">
                        		<items>
                        			<core:Item key="{TicketPriorityModel>value}" text="{TicketPriorityModel>description}" />
                        		</items>
                        	</Select>
						</f:content>
					</f:SimpleForm>
				</content>
			</Panel>
			<Toolbar design="Transparent">
    			<ToolbarSpacer />
    			<Button 
    			    type="Reject"
    			    text="Cancel"
    			    icon="sap-icon://cancel"
    			    press="onPressCancel"
    			/>
    			<ToolbarSpacer width="0.1em"/>
    			<Button
    			    type="Accept"
    			    text="Save"
    			    icon="sap-icon://save"
    			    press="onPressSave"
    			/>
			</Toolbar>
		</content>
	</Page>
</mvc:View>