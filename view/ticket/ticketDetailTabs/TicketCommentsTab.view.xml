<mvc:View
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:t="sap.suite.ui.commons" >
    
	<t:Timeline
        id="ticketEditComments"
        class="sapUiResponsiveContentPadding"
        enableBackendFilter="true"
        enableScroll="false"
        growingThreshold="10"
        enableSocial="true"
        content="{
            path: 'itsComments',
            filters: [{
                        path: 'commentText',
                        operator: 'NE',
                        value1: null
                    }]
        }"
        layout="ResponsiveGridLayout"
        showIcons="true" >
        <t:content>
            <t:TimelineItem
                icon="sap-icon://post"
                dateTime="{commentDateTime}"
                text="{commentText}"
                userName="{commentAuthor_firstName} {commentAuthor_lastName}" >
            </t:TimelineItem>
        </t:content>
    </t:Timeline>
	
</mvc:View>