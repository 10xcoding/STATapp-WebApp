<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core" >
	<QuickView
        id="quickViewOrigin"
        pages="{ path : '/path', templateShareable : 'true'}" >
		<QuickViewPage
			header="Employee Info"
			title="{firstName} {lastName}"
			description="Job Title" >
			<QuickViewGroup
                heading="Contact Info" >
				<QuickViewGroupElement
					label="Email"
					value="{email}"
					type="sap.m.QuickViewGroupElementType.email"
					/>
				<QuickViewGroupElement
					label="Phone"
					value="XXX-XXX-XXXX"
					type="sap.m.QuickViewGroupElementType.phone"
					/>
			</QuickViewGroup>
			<QuickViewGroup
                heading="Company" >
				<QuickViewGroupElement
					label="Name"
					value="XYZ Company"
					/>
				<QuickViewGroupElement
					label="Address"
					value="123 Fake Street"
					/>
			</QuickViewGroup>
		</QuickViewPage>
	</QuickView>
</core:FragmentDefinition>
